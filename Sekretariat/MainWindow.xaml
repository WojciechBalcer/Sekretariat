                        <Label Grid.Column="7">Pesel</Label>
                        <TextBox Grid.Row="2" Grid.Column="7" Name="peselU"></TextBox>
                        <Label Grid.Column="8">Zdjęcie</Label>
                        <TextBox Grid.Row="2" Grid.Column="8" Name="zdjecieU"></TextBox>
                        <Label Grid.Column="9">Płeć</Label>
                        <TextBox Grid.Row="2" Grid.Column="9" Name="plecU"></TextBox>
